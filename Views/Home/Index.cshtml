@model DenzelPortfolio.Models.CVModel
@{
    ViewData["Title"] = Model.Name + " - Portfolio";
}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1 class="name">@Model.Name</h1>
        <div class="contact-info">
            <span class="contact-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                @Model.Location
            </span>
            <span class="contact-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                @Model.Phone
            </span>
            <span class="contact-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                @Model.Email
            </span>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="skills-section">
    <div class="container">
        <h2 class="section-title">Technical Expertise</h2>
        <div class="skills-grid">
            @foreach (var category in Model.SkillCategories)
            {
                <div class="skill-card">
                    <h3 class="skill-title">@category.Title</h3>
                    <ul class="skill-list">
                        @foreach (var skill in category.Skills)
                        {
                            <li>@skill</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</section>

<!-- Projects Section -->
<section class="projects-section">
    <div class="container">
        <h2 class="section-title">Featured Projects</h2>
        <div class="projects-grid">
            @foreach (var project in Model.Projects)
            {
                <div class="project-card">
                    <div class="project-header">
                        <h3 class="project-name">@project.Name</h3>
                        <a href="@project.GitHubUrl" target="_blank" class="github-link" title="View on GitHub">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                        </a>
                    </div>
                    <p class="project-description">@project.Description</p>
                    <div class="tech-tags">
                        @foreach (var tech in project.Technologies)
                        {
                            <span class="tech-tag">@tech</span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Tools Section -->
<section class="tools-section">
    <div class="container">
        <h2 class="section-title">Tools</h2>
        <div class="tools-grid">
            @foreach (var tool in Model.Tools)
            {
                <div class="tool-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
                    @tool
                </div>
            }
        </div>
    </div>
</section>

<!-- Strengths Section -->
<section class="strengths-section">
    <div class="container">
        <h2 class="section-title">Strengths</h2>
        <div class="strengths-grid">
            @foreach (var strength in Model.Strengths)
            {
                <div class="strength-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
                    @strength
                </div>
            }
        </div>
    </div>
</section>

<footer class="footer">
    <div class="container">
        <p>&copy; @DateTime.Now.Year @Model.Name. All rights reserved.</p>
    </div>
</footer>
